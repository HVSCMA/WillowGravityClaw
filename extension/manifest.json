{
    "manifest_version": 3,
    "name": "Gravity Claw Sovereign Sidecar",
    "version": "1.0.0",
    "description": "Omnipotent Context-Aware Copilot for Follow Up Boss.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.followupboss.com/*",
        "http://localhost:3000/*",
        "https://hvscma-production.up.railway.app/*"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Toggle Gravity Claw Sidecar"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.followupboss.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://*.followupboss.com/*"
            ]
        }
    ]
}